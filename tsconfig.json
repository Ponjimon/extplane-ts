{
    "include": ["src", "types", "test.ts"],
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "lib": ["esnext", "dom"],
      "importHelpers": true,
      "declaration": true,
      "sourceMap": true,
      "rootDir": "./",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "*": ["src/*", "node_modules/*"]
      },
      "esModuleInterop": true
    },
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
